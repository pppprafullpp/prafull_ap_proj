<%=render :partial=>"home/common_header"%>
<div class="row">
  <h3 class="text-center">Change Password for <%=params[:type]%></h3>
</div>
<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <%=form_tag change_password_passwords_path,:method=>"post" do%>
    <%=hidden_field_tag :type,params[:type]%>
      <div class="form-group">
        <%=text_field_tag(:email,"",:placeholder=>"Enter Your Email",:class=>"form-control")%>
      </div>
      <div class="form-group text-center">
        <%=submit_tag("Get Instructions on mail to change password",:class=>"btn btn-danger")%>
      </div>
    <%end%>
  </div>
  <div class="col-md-4"></div>
</div>
