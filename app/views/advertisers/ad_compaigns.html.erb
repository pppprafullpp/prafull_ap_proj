<main>
 <section id="one-page-side-menu-static" class="one-page-side-menu-static side-menu">
 <div class="content-wrapper">
<%= render :partial => "/layouts/left_panel" %>
<%= render :partial => "/layouts/header" %>

<section class="account section" style="min-height:575px;">
<div class="container">

<div class="row">
<div class="col-md-6">
<h1>Ad Campaigns</h1>
</div>
<div class="col-md-6 text-right">
<a href="<%=advertiser_create_ad_compaign_path%>" class="btn btn-primary">Create Ad</a>
</div>
</div>

  <div class="row">
    <div class="col-md-12">
    <div class="table-responsive">
          <table class="table table-striped" width="100%" cellspacing="0">
          <thead>
          <tr>
          <th>Ad Type</th>
          <th>Ad Platform</th>
          <th>Name & email</th>
          <th>Date &amp; Time</th>
          <th>Status</th>
          <th>Category</th>
          <th>Reason for decline</th>
           </tr>
          </thead>

          <tbody>

          <%@ads.each do |ad|%>
          <tr>
          <td><%= Advertisement::TYPE.key(ad.ad_type.to_i) %></td>
          <td><%= Advertisement::PLATFORMS.key(ad.platform.to_i) %></td>
          <td><%= Influencer.find(ad.influencer_id).name %>(<%=Influencer.find(ad.influencer_id).email %>)</td>
          <td><%= ad.created_at %></td>
          <td>
           <%=Advertisement::STATUS.key(ad.status)%>
          </td>
          <td><%=Category.find(ad.category).name.titleize%></td>
          <td><%=ad.reason_for_decline%></td>
          </tr>
          <%end%>
          </tbody>
          </table>
        </div>
    </div>
  </div>

 <%=will_paginate @ads, renderer: BootstrapPagination::Rails%>

</div>
</section>
<%= render :partial => "layouts/footer"%>
</div>
</section>
