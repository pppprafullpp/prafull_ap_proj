<main>
 <section id="one-page-side-menu-static" class="one-page-side-menu-static side-menu">
 <div class="content-wrapper">
<%= render :partial => "/layouts/left_panel" %>
<%= render :partial => "/layouts/header" %>

<section id="pricing" class="pricing section section-description">
    <div class="container">

  <div class="row">
  <div class="col-md-6">
    <h1>Ad History</h1>
  </div>
  <div class="col-md-6 text-right">

    <div class="form-inline extraMargin">
    <button class="btn btn-default btn-sm" onclick="to_list()"><span class="glyphicon glyphicon-th-list"> </span>List</button>
    <button class="btn btn-default btn-sm" onclick="to_grid()"><span  class="glyphicon glyphicon-th"></span>Grid</button>
    <!-- <div class="form-group extraControl wd105 clearfix">
    <select name="" class="custom-select">
    <option>Channel</option>
    <option>All</option>
    <option>Facebook</option>
    </select>
    </div> -->
    <%if params[:category].present? && params[:publishing_price].present?%>
    <div class="form-group extraControl wd150 clearfix hidden">
      <%=select_tag :category_id,options_for_select(Category.pluck(:name,:id),params[:category_id]),{:include_blank=>"-Select Category-",:class=>"form-control",:onchange=>"filter('category',this)"} %>
    </div>
    <div class="form-group extraControl wd140 clearfix hidden">
      <%=select_tag :publishing_price,options_for_select(Influencer.pluck(:publishing_price).uniq,params[:publishing_price]),{:include_blank=>"-Publishing Price-",:class=>"form-control",:onchange=>"filter('publishing_price',this)"} %>
  </div>
    <%else%>
    <div class="form-group extraControl wd150 clearfix">
      <%=select_tag :category_id,options_for_select(Category.pluck(:name,:id),params[:category_id]),{:include_blank=>"-Select Category-",:class=>"form-control",:onchange=>"filter('category',this)"} %>
    </div>
    <div class="form-group extraControl wd140 clearfix">
      <%=select_tag :publishing_price,options_for_select(Influencer.pluck(:publishing_price).uniq,params[:publishing_price]),{:include_blank=>"-Publishing Price-",:class=>"form-control",:onchange=>"filter('publishing_price',this)"} %>
  </div>
  <%end%>
    <div class="form-group">
      <a href="" id="list" onclick="javascript:window.location.reload()" class="btn btn-default btn-sm"><span class="ion-loop"></span></a>
    </div>

 </div>
  </div>
 </div>

    <div class="row">

      <%@ad_requests.each do |ad_request|%>
        <div class="col-md-4 main-content-wrapper">
          <div class="price-features">
            <div class="advertiserBox">
              <%if ad_request.ad_image_url.present?%>
              <img id="<%=ad_request.id%>_img" height="143px" src="<%=ad_request.ad_image_url%>">
              <%else%>
              <img id="<%=ad_request.id%>_img" height="143px" src="/assets/gallery/social-influencer4">
              <%end%>
            </div>
            <div class="caption">
              <h4 id="<%=ad_request.id%>_title"><%=ad_request.title%></h4>
              <p id="<%=ad_request.id%>_description" class="word-wrap"> <%=ad_request.description%></p>
              <div class="price-cta">
                <div class="price-number-wrap">
                <div class="price-top"><span class="price-plan-time-unit">Price: </span><span class="price-cta-number">$50</span></div>
                  <p><b>Current Status</b>:<%=Advertisement::STATUS.key (ad_request.status)%></p>
                  <%if ad_request.status == declined_by_influencer %>
                  <p><b>Reason for decline:</b></p>
                  <p><%=ad_request.reason_for_decline%></p>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>

      <%end%>
      </div>

      </div>
    </section>
  </div>
</section>
</main>
