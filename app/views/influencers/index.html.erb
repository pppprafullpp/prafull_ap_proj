                  <p id="<%=ad_request.id%>_description"><%=ad_request.description%></p>
                  <div class="price-cta">
                    <div class="price-number-wrap">
                      <div class="price-top"><span class="price-plan-time-unit">Price: </span><span class="price-cta-number">$50</span></div>
                    </div>
                    <button class="btn btn-mountain-o btn-sm btn-round" onclick=" open_share_dialog(<%=ad_request.id%>)">Approve</button> <button class="btn btn-mountain-o btn-sm btn-round" data-toggle="modal" data-target="#declinePopup">Decline</button> <button class="btn btn-mountain-o btn-sm btn-round fnt-large" data-toggle="modal" data-target="#reportPopup"><span class="ion-android-more-vertical"></span></button>
                  </div>
            </div>
          </div>

          <%end%>
        </div>
      </div>
      <!-- Approve Popups -->
    </section>
   <%= render :partial => "/layouts/footer" %>
</div>
</section>
