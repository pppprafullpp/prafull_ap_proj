<main>
 <section id="one-page-side-menu-static" class="one-page-side-menu-static side-menu">
 <div class="content-wrapper">
<%= render :partial => "/layouts/left_panel" %>
<%= render :partial => "/layouts/header" %>


<section id="pricing" class="pricing section section-description">
      <div class="container">

  <div class="row">
  <div class="col-md-12">
    <h1>Ad Request</h1>
  </div>
 </div>

    <div class="row">

      <%@ad_requests.each do |ad_request|%>

      <div class="col-md-4 main-content-wrapper">
        <div class="lft-icon">
        <div class="center-icon">
        <span class="ion-social-facebook"></span>
        </div>
        </div>

        <div class="price-features">
          <div class="advertiserBox">
            <img src="/assets/gallery/ad-request.jpg">
            </div>
          <h4><%=ad_request.title%></h4>
          <p><%=ad_request.description%></p>
          <div class="price-cta">
            <div class="price-number-wrap">
              <div class="price-top"><span class="price-plan-time-unit">Price: </span><span class="price-cta-number">$50</span></div>
            </div>
            <button class="btn btn-mountain-o btn-sm btn-round" data-toggle="modal" data-target="#approvePopup">Approve</button> <button class="btn btn-mountain-o btn-sm btn-round" data-toggle="modal" data-target="#declinePopup">Decline</button> <button class="btn btn-mountain-o btn-sm btn-round fnt-large" data-toggle="modal" data-target="#reportPopup"><span class="ion-android-more-vertical"></span></button>
          </div>
        </div>
      </div>

      <%end%>
      </div>

      </div>
    </section>

</div>
</section>
</main>
