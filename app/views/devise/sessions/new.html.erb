<%=render :partial=>"home/common_header"%>
<div class="container">
  <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4">
        <h3>Log in <%=resource_name.to_s.camelcase%></h3>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email,:placeholder=>"Enter Email",:autofocus=>true,:class=>"form-control":onblur=>"check_email_existing('#{resource_name}',this.value)" %>
             <span class="sm-Txt hidden"  id="error-msg">asdf sdf</span>
          </div>

          <div class="form-group">
            <%= f.password_field :password,:placeholder=>"Enter Password", autocomplete: "off", :class=>"form-control" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in", :class=>"btn btn-success" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
      <div class="col-md-4"></div>
  </div>
</div>
<script>
function check_email_existing(t,e) {
  $.ajax({
    url:"/check_email_existing",
    type: "POST",
    data: {
      type:t,
      email:e
    },
    success: function(response) {
      if(response["present"]) {
        $("#error-msg").removeClass("hidden").text("not available");
      }
      else {
        $("#error-msg").addClass("hidden");
      }
    }
  })
}
</script>
;
